<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN"
        "http://www.eclipse.org/jetty/configure_10_0.dtd">
<Configure class="org.eclipse.jetty.ee10.webapp.WebAppContext">
    <Set name="contextPath">/issuer</Set>
    <Set name="descriptor"><SystemProperty name="jetty.home" default="."/>/webapp/WEB-INF/web.xml</Set>
    <Set name="war"><SystemProperty name="jetty.home" default="."/>
        /webapps/@warname@</Set>
    <Set name="extractWAR">true</Set>
</Configure>